<div id="<%= dom_id comment %>" class="border-b border-gray-200 py-4">
  <p class="text-gray-800 font-semibold"><%= comment.author %></p>
  <p class="text-gray-600 mt-1"><%= comment.body %></p>
  <%= button_to "Destroy Comment", [comment.post, comment], method: :delete, class: "text-red-500 hover:text-red-700 text-sm mt-2", data: { turbo_confirm: "Are you sure?" } %>
</div>